<form action="/post/create" method="POST" class="form-create-post">
  <ul>
    <li class="form-item">
      <label for="post">Post</label>
      <textarea name="post" id="post" placeholder="What is happening?!" spellcheck="true" oninput="textarea_onInput(this)" maxlength="560"></textarea>
      <% if (locals.errors?.post) { %>
        <p class="input-error active-error"><%= errors.post.msg %></p>
      <% } %>
    </li>
  </ul>
  <button type="submit" disabled>Post</button>
</form>