<section id="posts">
  <h2><%= heading %></h2>
  <%# Refactor this somehow %>
  <% if (posts.length > 0) { %>
    <% posts.forEach((post) => { %>
      <%- include('./post', { currentUser, post, utils }) %>
    <% }); %>
  <% } else if (heading === 'Posts' && currentUser) { %>
    <p>Be the first to post!</p>
  <% } else if (heading === 'Posts') { %>
    <article class="posts-zero">
      <p>Login and be the first to post!</p>
      <a href="/account/login">Login</a>
      <p>Don't have an account? <a href="/account/signup">Sign up now!</a></p>
    </article>
  <% } else { %>
    <p>User has not posted anything yet.</p>
  <% } %>
</section>