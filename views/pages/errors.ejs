<!DOCTYPE html>
<html lang="en">
  <%- include('./head', { title: status }) %>
  <body>
    <%- include('./header') %>
    <main>
      <section id="error-<%= status %>">
        <% switch(status) {
          case 401: %>
            <article class="unauthorized">
              <h2>Login Required</h2>
              <p>You must log in to visit this resource.</p>
              <a href="/account/login">Login</a>
              <p>Don't have an account? <a href="/account/signup">Sign up now!</a></p>
            </article>
          <% break;
          case 403:
          case 404: %>
            <h2><%= error %></h2>
          <% break;
        } %>
      </section>
    </main>
    <%- include('./footer') %>
  </body>
</html>