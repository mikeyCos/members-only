<!DOCTYPE html>
<html lang="en">
  <%- include('./head', { title: status }) %>
  <body>
    <%- include('./header') %>
    <main>
      <section id="error-<%= status %>">
        <% switch(status) {
          case 401: %>
            <h2>Login Required</h2>
            <p>You must log in to visit this resource.</p>
            <a href="/account/login">Login</a>
          <% break;
          case 403:
          case 404: %>
            <h2><%= error %></h2>
          <% break;
        } %>
      </section>
    </main>
    <%- include('./footer') %>
  </body>
</html>